<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sam_chordas.android.stockhawk">

    <!-- App Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Activities -->
        <activity android:name="com.sam_chordas.android.stockhawk.ui.MyStocksActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DetailStockActivity"
            android:label="@string/detail_stock" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.sam_chordas.android.stockhawk.ui.MyStocksActivity" />
        </activity>

        <!-- Services -->
        <service android:name="com.sam_chordas.android.stockhawk.service.StockTaskService"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
            </intent-filter>
        </service>
        <service
            android:name="com.sam_chordas.android.stockhawk.service.StockIntentService" />

        <service
            android:name=".widget.StockWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <!-- Provider -->
        <provider
            tools:ignore="ExportedContentProvider"
            android:authorities="com.sam_chordas.android.stockhawk.data.QuoteProvider"
            android:name="com.sam_chordas.android.stockhawk.data.generated.QuoteProvider"
            android:exported="true"/>

        <!-- Receiver -->
        <receiver
            android:name=".widget.StockWidgetProvider"
            android:label="@string/widget_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/stock_info"/>
        </receiver>


    </application>

</manifest>
